<%- include('../user/layouts/header')%>    
<%- include('../user/partials/userheader')%>
<div class="container  mb-5 p-5" >
    <div class="row" style="min-height: 100vh; margin-top: 30px;">
      <div class="card col-md-3 border-0">
        <div class="d-flex justify-content-center m-2">
          <img
            src="/assets/S4on1Commercial_Setup.jpg"
            class="card-img-top rounded-circle"
            alt="Profile Picture"
            style="width: 150px; height: 150px;"
          />
        </div>
        <div class="card-body text-center">
          <% if (user) { %>
            <h5 class="card-title"><%= user.name %></h5>
          <% } else { %>
            <h5 class="card-title">User</h5>
          <% } %>
          <% if (user) { %>
            <p class="card-text"><%= user.email %></p>
          <% } %>
          <hr />
        </div>
      </div>
  
      <main class="col-md-8 border-start">
        <hr /><br />
  
        <% offers.forEach(function(offer) { %>
          <div class="card border-0 shadow mt-2">
            <div class="card-body d-flex">
              <div
                class="border-end col-md-2 text-success fw-bold text-center p-3"
              >
                Rs.<%= offer.discountAmount %>
                <br />
                OFF
              </div>
              <div class="p-3">
                On minimum purchase of Rs.<%= offer.minimumPurchaseAmount %> <br>
                Code: <%= offer.couponcode %>   
              </div>
            </div>
            <div class="card-footer bg-white">ExpireDate: <%= moment(offer.expiryDate).utc().format('lll') %></div>
           
          </div>
        <% }); %>
  
      </main>
    </div>
  </div>
  <%-include('../user/layouts/footer') %>
