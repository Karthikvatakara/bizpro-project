<%- include('../user/layouts/header')%>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <%- include('../user/partials/userheader')%>
    <%- include('../user/partials/usercanvas') %>

    <style>
        .fixed-image {
            width: 250px;
            height: 250px;
            object-fit: fill;
        }
    
        
    </style>
    
    <div class="container-fluid gradient-custom-2">
        <div class="row justify-content-center align-items-center h-100">
            <% if(review && review.length > 0){ %>
                <% review.forEach((review)=> { %>
                    <div class="col-12 col-md-6 col-lg-4 mb-4">
                        <div class="card" style="border-radius: 16px;">
                            <div class="card-body">
                               
                                <img src="/uploads/<%=review.productId.imageUrl[0]%>"
                                    class="card-img-top fixed-image img-fluid pl-3 ml-5" alt="Product Image">
                                <h6 class="card-subtitle mb-2 text-muted"><%= review.productId.ProductName %></h6>
                                <p class="card-text">rating: <%= review.rating %></p>
                                <p class="card-text">my review: â‚¹ <%= review.reviewText %></p>
                                
                          
    
                              
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>

    <%-include('../user/layouts/footer') %>