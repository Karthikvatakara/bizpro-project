<section>
    <div class="container">
        <div class="row mt-5">
            <a href="/admin/addproduct" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-5">
            <thead>
              <tr>
                <th scope="col">no</th>
                <th scope="col">title</th>
                <th scope="col">category</th>
                <th scope="col">description</th>
                <th scope="col">image</th>
              </tr>
            </thead>
            <tbody>
                <% product.forEach(product =>{ %>
              <tr>
                <th scope="row">1</th>
                <td><%= product.name %></td>
                <td><%= product.category %></td>
                <td><%= product.price %></td>
                <td><img style="width: 50px;height: 50px;" src="/uploads/<%= product.imageUrl %>" alt=""></td>
                
              </tr>
             <%}) %>
            </tbody>
          </table>
    </div>
</section>