<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

    <style>
        body {
            font-family: Arial, sans-serif;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }
    </style>
</head>

<body>
    <div class="d-flex justify-content-center align-items-center">

        <h1 style="font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">Sales Report <%= `      ${startDate}    to      ${endDate}` %></h1>
    </div>

    <table>
        <thead>
            <tr>
                <td>User ID</td>
                <td>Order ID</td>
                <td>Date</td>
                <td>Total Amount</td>
                <td>Payment Method</td>
            </tr>
            </thead>
            <tbody>
            <% orders.forEach(order => { %>
                <tr>
                    <td>#usr-<%= order.userId.userUuid %></td>
                    <td>#ORD-<%= order.orderUuid %></td>
                    <td><%= order.OrderDate.format('lll') %></td>
                    <td><%= order.TotalPrice.toFixed(2) %></td>
                    <td><%= order.PaymentMethod %></td>
                </tr>
            <% }); %>
        </tbody>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td style="font-weight: 600;">Total Sales : </td>
            <td>â‚¹  <%= totalSales[0]?.totalSales %></td>

        </tr>
    </table>
</body>
</html>